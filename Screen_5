    <script>
        // Function to enable inline editing
        function enableEdit(button) {
            const row = button.closest('tr');
            const cells = row.querySelectorAll('td:not(:last-child)');
            
            // Replace cell content with input fields
            cells.forEach((cell, index) => {
                const currentValue = cell.textContent;
                cell.innerHTML = `<input type="text" class="edit-input" value="${currentValue}">`;
            });
            
            // Change buttons to Save and Cancel
            const actionCell = row.querySelector('td:last-child');
            actionCell.innerHTML = `
                <div class="action-buttons">
                    <button class="btn btn-save" onclick="saveChanges(this)">
                        <i class="fas fa-check"></i> Save
                    </button>
                    <button class="btn btn-cancel" onclick="cancelEdit(this)">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                </div>
            `;
        }
        
        // Function to save changes
        function saveChanges(button) {
            const row = button.closest('tr');
            const inputs = row.querySelectorAll('.edit-input');
            
            // Replace input fields with new values
            inputs.forEach(input => {
                input.closest('td').textContent = input.value;
            });
            
            // Revert buttons to Update and Delete
            const actionCell = row.querySelector('td:last-child');
            actionCell.innerHTML = `
                <div class="action-buttons">
                    <button class="btn btn-update" onclick="enableEdit(this)">
                        <i class="fas fa-edit"></i> Update
                    </button>
                    <button class="btn btn-delete" onclick="showDeleteModal()">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </div>
            `;
            
            // Show success message (in a real app, you would send data to server)
            alert('User information updated successfully!');
        }
        
        // Function to cancel editing
        function cancelEdit(button) {
            const row = button.closest('tr');
            // In a real application, we would revert to original values
            // For this demo, we'll just reload the page
            location.reload();
        }
        
        // Function to show delete confirmation modal
        function showDeleteModal() {
            document.getElementById('deleteModal').style.display = 'flex';
        }
        
        // Function to close modal
        function closeModal() {
            document.getElementById('deleteModal').style.display = 'none';
        }
        
        // Function to delete user
        function deleteUser() {
            // In a real application, this would send a request to the server
            alert('User deleted successfully!');
            closeModal();
            // For demo purposes, we'll just reload the page
            setTimeout(() => { location.reload(); }, 1000);
        }
        
        // Close modal if user clicks outside the modal content
        window.onclick = function(event) {
            const modal = document.getElementById('deleteModal');
            if (event.target === modal) {
                closeModal();
            }
        };
    </script>
