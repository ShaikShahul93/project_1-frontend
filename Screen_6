    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('customerForm');
            const previewBtn = document.getElementById('previewBtn');
            const previewSection = document.getElementById('previewSection');
            
            // Preview button functionality
            previewBtn.addEventListener('click', function() {
                // Update preview section with form values
                document.getElementById('previewYear').textContent = document.getElementById('year').value || 'Not provided';
                document.getElementById('previewGN').textContent = document.getElementById('gn').value || 'Not provided';
                document.getElementById('previewName').textContent = document.getElementById('name').value || 'Not provided';
                document.getElementById('previewSCNo').textContent = document.getElementById('scno').value || 'Not provided';
                document.getElementById('previewEmail').textContent = document.getElementById('email').value || 'Not provided';
                document.getElementById('previewPhone').textContent = document.getElementById('phone').value || 'Not provided';
                document.getElementById('previewAddress').textContent = document.getElementById('address').value || 'Not provided';
                document.getElementById('previewStatus').textContent = document.getElementById('status').value || 'Not provided';
                
                // Show the preview section
                previewSection.style.display = 'block';
                
                // Scroll to preview section
                previewSection.scrollIntoView({ behavior: 'smooth' });
            });
            
            // Form submission
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Basic validation
                const year = document.getElementById('year').value;
                const gn = document.getElementById('gn').value;
                const name = document.getElementById('name').value;
                const scno = document.getElementById('scno').value;
                
                if (!year || !gn || !name || !scno) {
                    alert('Please fill in all required fields (Year, GN, Name, SC No)');
                    return;
                }
                
                // In a real application, you would send the data to a server here
                // For demonstration, we'll just show a success message
                
                alert('Customer data saved successfully!');
                
                // Reset form
                form.reset();
                
                // Hide preview section
                previewSection.style.display = 'none';
            });
            
            // Clear form button already works due to type="reset"
        });
    </script>
